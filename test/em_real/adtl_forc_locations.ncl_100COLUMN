;               (/39,37,5/)/)

 adj_dim=dimsizes(adj_points0)
 ndims=dimsizes(adj_dim)
 adj_points      = adj_points0

 if(ndims .gt. 1) then
    adj_points(:,0) = adj_points0(:,0) * nx/nx0
    adj_points(:,1) = adj_points0(:,1) * ny/ny0
    adj_points(:,2) = adj_points0(:,2) * nz/nz0
    ninverse=adj_dim(0)
 else
    adj_points(0) = adj_points0(0) * nx/nx0
    adj_points(1) = adj_points0(1) * ny/ny0
    adj_points(2) = adj_points0(2) * nz/nz0
    ninverse=1
 end if

; TRANSFORM0= (/ 0,   0, -2/)

; TRANSFORM0= (/ -5,   2,  -1/)

; TRANSFORM0= (/(/ 0,   0,  -2/), \
;               (/ 0,   0,  -1/)/)

; TRANSFORM0= (/(/ -5,   2,  -1/), \
;               (/ -5,   0,  1/)/)

; TRANSFORM0= (/(/ -8,   0,  0/), \
;               (/  0,  -2,  0/), \
